{
  "manifest_version": 2,
  "name": "Popup Window Opener",
  "version": "1.0",
  "description": "Opens a small popup window",
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_title": "Open Popup",
    "default_icon": {
      "48": "icons/icon.svg"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
